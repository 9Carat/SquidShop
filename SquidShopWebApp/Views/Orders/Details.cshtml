@model OrderViewModel

@{
    ViewData["Title"] = "Details";
    int quantity = 0;
    double price = 0;
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
@*        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderStatus)
        </dd>*@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.ShippingAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.ShippingAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.FirstName) 
            @Html.DisplayFor(model => model.User.LastName)
        </dd>
        <dt class="col-sm-2">
            Products
        </dt>
        <dd class="col-sm-10">
        @foreach (var product in Model.Product)
        {
           @product.ProductName <br>
        }
        </dd>
        <dt class="col-sm-2">
            Total Quantity
        </dt>
        <dd class="col-sm-10">
        @foreach (var order in Model.OrderList)
        {
            quantity += @order.Quantity;
        }
            @quantity <br />
        </dd>
        <dt class="col-sm-2">
            Total Price
        </dt>
        <dd class="col-sm-10">
            @foreach (var order in Model.OrderList)
            {
                price += @order.Price;
            }
            @price <br />
        </dd>
        <dt class="col-sm-2">
            Distance
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApiResponse)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Order.OrderId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>