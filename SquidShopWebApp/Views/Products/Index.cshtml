@model IEnumerable<SquidShopWebApp.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    @foreach(var item in Model)
    {
        <div class="col-md-2 border border-primary rounded mx-2">
            <p>@item.ProductName</p>
            <img class="prodImg" src="@("~/images/" + item.ImageName)" asp-append-version="true" />
            <div>
                Price: @if (@item.Discount != false)
                {
                    <p class="oldPrice">@item.UnitPrice</p>
                    <p>@item.DiscountUnitPrice</p>
                    <p class="text-success">@((1 - item.DiscountUnitPrice / item.UnitPrice) * 100)% Off!</p>
                }
                else
                {
                    @item.UnitPrice
                }
            </div>
            <div>
                <a asp-action="BuyProduct" asp-route-id="@item.ProductId">Buy</a>
                <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
            </div>
        </div>
    }
</div>
