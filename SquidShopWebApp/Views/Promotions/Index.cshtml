@model IEnumerable<SquidShopWebApp.Models.Promotion>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Start date</th>
            <th scope="col">End date</th>
            <th scope="col">Discount Percentege</th>
            <th scope="col">ProductId</th>
            <th scope="col">Product name</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountProcent)%
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductId)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PromotionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PromotionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PromotionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
